FROM tiddlywiki:5

RUN apk update && apk upgrade && apk add --no-cache bash git openssh
WORKDIR /var/lib/tiddlywiki
USER root
RUN git clone https://github.com/reidgould/tiddlywiki-dropboard.git /var/lib/tiddlywiki/tiddlywiki-dropboard
WORKDIR /var/lib/tiddlywiki/tiddlywiki-dropboard
RUN npm install

WORKDIR /var/lib/tiddlywiki
CMD ["/usr/local/bin/init-and-run-wiki"]
